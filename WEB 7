<?php
if(isset($_POST['number'])) {
$input = $_POST['number'];
$reverse = strrev($input);
if($reverse == $input) {
echo "<h2> $input is a palindrome </h2>";
echo "<br>";
}
else {
echo "<h2> $input is not a palindrome</h2>";
echo "<br>";
}
echo "<h2> The number of the digits in the given number is: </h2>" ;
echo "<h2>" .strlen($input). "</h2>";
}
?>
