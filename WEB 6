<?php
if(isset($_POST['submit']))
{
$length=$_POST['n1'];
$width=$_POST['n2'];
echo "Area of Rectangle with $length * $width= " . ($length * $width) . "<br />";
}
if(isset($_POST['submit']))
{
$base=$_POST['n1'];
$height=$_POST['n2'];
echo "Area of Triangle with base $base and height $height= " .($base * $height) / 2 ."<br/>";
}
if(isset($_POST['submit']))
{
$pi=3.14;
$radius=6;
echo "Area of Circle with $pi and radius $radius= ". ($pi*$radius * $radius);
}
?>
